/* pages/post/post.wxss */
.page{
  height: 100%;
}

.background {
  width: 100%;
  height: 100%;
  position:fixed; 
  background-size:100% 100%;
  z-index: -1;
}

.weui-search-bar {
  position: relative;
  padding: 8px 10px;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  box-sizing: border-box;
  background-color: #EFEFF4;
  border-top: 1rpx solid #D7D6DC;
  border-bottom: 1rpx solid #D7D6DC;
}
.weui-icon-search_in-box {
  position: absolute;
  left: 10px;
  top: 7px;
}
.weui-search-bar__form {
  position: relative;
  -webkit-box-flex: 1;
  -webkit-flex: auto;
          flex: auto;
  border-radius: 5px;
  background: #FFFFFF;
  border: 1rpx solid #E6E6EA;
}
.weui-search-bar__box {
  position: relative;
  padding-left: 30px;
  padding-right: 30px;
  width: 100%;
  box-sizing: border-box;
  z-index: 1;
}
.weui-search-bar__input {
  height: 28px;
  line-height: 28px;
  font-size: 14px;
}
.weui-search-bar__cancel-btn {
  margin-left: 10px;
  line-height: 28px;
  color: #09BB07;
  white-space: nowrap;
}

.querytitle{
  margin-top:18%;
  margin-left: 3%;
  font-size:32rpx;
}

.recommand{
  margin-left: 17%;
  font-size:30rpx;
  font-weight: 633;
  font-style: oblique;
  color: #4169E1;
}

.make{
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 77rpx;
  margin-bottom:0;
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #807878;
  font-size: small;
}